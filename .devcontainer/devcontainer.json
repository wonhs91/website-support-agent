// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "rumor-chatbot-devcontainer",
	"image": "mcr.microsoft.com/devcontainers/python:2-3.14-bookworm",
	"workspaceFolder": "/workspaces/chatbot",
	"forwardPorts": [8000],
	"remoteUser": "appuser",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"username": "appuser",
			"installZsh": false,
			"upgradePackages": false,
			"configureSudo": "passwordless"
		},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"moby": true,
			"azureDnsAutoDetection": true,
			"installDockerBuildx": true,
			"installDockerComposeSwitch": true,
			"version": "latest",
			"dockerDashComposeVersion": "v2"
		}
	},
    "postCreateCommand": "python -m pip install --user -r requirements.txt && python -m pip install --user pytest ruff mypy",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-azuretools.vscode-docker"
			]
		}
	}




	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

